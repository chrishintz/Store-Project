
<header class="jumbotron hero-spacer text-center">
  <h1>Dori-Mart's Products</h1>
</header>



<% @products.each do |p| %>
  <div class="col-md-4">
    <div class="thumbnail">
      <a href="/products/<%= p.id %>" class="product"><%= image_tag"#{p.image_url}" %></a>
      <div class="caption">
        <a href="/products/<%= p.id %>"><h3 class="product-name"><%= p.name %></h3></a>
        <p><%= p.description %></p>
        <p><a href="/products/<%= p.id %>" class="btn btn-primary btn-block">Buy Now!</a></p>
      </div>
    </div>
  </div>
<% end %>
